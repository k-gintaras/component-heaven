{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "colorator",
  "projectType": "library",
  "sourceRoot": "projects/colorator/src",
  "prefix": "lib",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:ng-packagr",
      "options": {
        "project": "projects/colorator/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "projects/colorator/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "projects/colorator/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production",
      "outputs": [
        "{workspaceRoot}/dist/colorator"
      ]
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "tsConfig": "projects/colorator/tsconfig.spec.json",
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ]
      }
    }
  }
}